<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.knpark.repogitory.MemberRepository">

	<resultMap type="Member" id="MemberResult">
		<result property="id" column="id"/>
		<result property="pw" column="pw"/>
		<result property="name" column="name"/>
		<result property="mpost" column="mpost"/>
		<result property="address" column="address"/>
		<result property="phone" column="phone"/>
		<result property="email" column="email"/>
		<result property="gender" column="gender"/>
		<result property="birth" column="birth"/>
		<result property="mRdate" column="mRdate"/>
	</resultMap>

	<select id="idConfirm" parameterType="String" resultType="int">
		SELECT COUNT(*) FROM MEMBER WHERE ID=#{id}
	</select>
	<insert id="insertMember" parameterType="Member">
		INSERT INTO MEMBER VALUES(#{id}, #{pw}, #{name}, #{address}, #{phone}, #{email}, 
									#{gender}, #{birth}, SYSDATE)
	</insert>
	<select id="getMember" parameterType="String" resultType="Member">
		SELECT * FROM MEMBER WHERE ID=#{id}
	</select>
	<update id="modifyMember" parameterType="Member">
		UPDATE MEMBER
		    SET PW = #{pw, jdbcType=VARCHAR},
		        NAME = #{name},
		        ADDRESS = #{address},
		        PHONE = #{phone},
		        EMAIL = #{email},
		        GENDER = #{gender},
		        BIRTH = #{birth}
		    WHERE ID = #{id, jdbcType=VARCHAR}
	</update>
	<!-- <select id="findIDAccount" parameterType="String" resultType="Member">
		SELECT ID FROM MEMBER WHERE NAME=#{name} AND EMAIL=#{email}
	</select>
	<select id="findPWAccount" parameterType="String" resultType="Member">
		SELECT PW FROM MEMBER WHERE ID=#{id} AND NAME=#{name} AND EMAIL=#{email}
	</select>-->
	<delete id="deleteMember" parameterType="String">
		DELETE FROM MEMBER WHERE ID=#{id}
	</delete>
	<select id="pwConfirm" parameterType="String">
		SELECT PW FROM MEMBER WHERE ID = #{id}
	</select>
</mapper>